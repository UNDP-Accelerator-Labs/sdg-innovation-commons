# Semantic Search Service - Development Environment
# For local development with Docker Compose infrastructure

# ============================================================================
# QDRANT VECTOR DATABASE
# ============================================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_API_KEY=dev-secret-key
QDRANT_COLLECTION_NAME=sdg_documents
QDRANT_USE_HTTPS=false

# ============================================================================
# API SECURITY
# ============================================================================
# Generate with: openssl rand -hex 32
API_SECRET_KEY=dev-api-secret-key-replace-in-production
API_ALGORITHM=HS256

# Allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================================================
# SERVICE CONFIGURATION
# ============================================================================
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000
LOG_LEVEL=INFO

# ============================================================================
# EMBEDDING MODEL
# ============================================================================
# Model from HuggingFace
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
# Device: cpu or cuda (if GPU available)
DEVICE=cpu

# ============================================================================
# REDIS CACHE (Optional but recommended)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=devpassword
REDIS_ENABLED=true
REDIS_TTL=3600

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================
# Max workers for embedding generation
MAX_WORKERS=4
# Batch size for embedding generation
BATCH_SIZE=32
