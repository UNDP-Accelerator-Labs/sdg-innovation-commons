# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_API_KEY=your-secure-api-key-here
QDRANT_COLLECTION_NAME=main
QDRANT_USE_HTTPS=false

# API Security
API_SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
API_ALGORITHM=HS256
ALLOWED_ORIGINS=http://localhost:3000,https://sdg-innovation-commons.org

# JWT Authentication (for Next.js integration)
APP_SECRET=your-app-secret-key
NEXTAUTH_SECRET=your-nextauth-secret
JWT_SECRET_KEY=your-jwt-secret

# API Key for service-to-service communication
SEMANTIC_SEARCH_API_KEY=your-semantic-search-api-key

# Service Configuration
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000
LOG_LEVEL=INFO

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
DEVICE=cpu

# Redis Cache (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ENABLED=true
REDIS_TTL=3600

# Feature Flags
ENABLE_CACHE=true
ENABLE_SNIPPETS=true
SHORT_SNIPPETS=true
ENABLE_CHUNK_HASHING=true

# Chunking Parameters (matches NLP API)
CHUNK_SIZE=500
CHUNK_PADDING=50

# Performance
MAX_WORKERS=4
BATCH_SIZE=32
TIMEOUT=600
