# ============================================================================
# LOCAL DEVELOPMENT ENVIRONMENT
# ============================================================================
# Copy this file to .env and update with your local development credentials

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
NODE_ENV=development
PORT=3000
NEXTAUTH_URL=http://localhost:3000

# ============================================================================
# DATABASE CONFIGURATION (Local PostgreSQL)
# ============================================================================
# Option 1: Use Docker PostgreSQL (default for dev)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/postgres
GENERAL_DB_HOST=localhost
GENERAL_DB_USER=postgres
GENERAL_DB_PASSWORD=postgres
GENERAL_DB_NAME=postgres
GENERAL_DB_PORT=5432

# Option 2: Use Azure PostgreSQL (uncomment and update)
# DATABASE_URL=postgres://username@server:password@server.postgres.database.azure.com:5432/dbname?sslmode=require
# GENERAL_DB_HOST=server.postgres.database.azure.com
# GENERAL_DB_USER=username@server
# GENERAL_DB_PASSWORD=your-password
# GENERAL_DB_NAME=dbname
# GENERAL_DB_PORT=5432

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
# Generate with: openssl rand -hex 32
APP_SECRET=dev-app-secret-replace-in-production
NEXTAUTH_SECRET=dev-nextauth-secret-replace-in-production

# ============================================================================
# QDRANT VECTOR DATABASE
# ============================================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=dev-secret-key

# ============================================================================
# REDIS CACHE
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=devpassword

# ============================================================================
# SEMANTIC SEARCH SERVICE
# ============================================================================
SEMANTIC_SEARCH_URL=http://localhost:8000
SEMANTIC_SEARCH_API_KEY=dev-api-key
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================================================
# EXTERNAL APIs (Optional for development)
# ============================================================================
OPENCAGE_API=your-opencage-api-key
ACCLAB_PLATFORM_KEY=your-platform-key
BLOG_API_TOKEN=your-blog-token

# ============================================================================
# EMAIL/SMTP CONFIGURATION (Optional for development)
# ============================================================================
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-password

# ============================================================================
# AZURE STORAGE (Optional)
# ============================================================================
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
# AZURE_STORAGE_CONTAINER=uploads

# ============================================================================
# WORKER CONFIGURATION
# ============================================================================
WORKER_CONCURRENCY=2
WORKER_INTERVAL=60

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
